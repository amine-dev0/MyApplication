<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
  tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnsignin1"
        android:layout_marginBottom="202dp"
        android:visibility="visible"
        app:srcCompat="@drawable/img"
        tools:visibility="visible" />


    <EditText
        android:id="@+id/username1"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text=""
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#1716167F"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:drawablePadding="20dp"
        android:hint="@string/username"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:autofillHints=""
         />

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/username1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#1716167F"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:hint="@string/password"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25sp"
        android:autofillHints=""
         />
    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnsignin1"
        android:background="@drawable/lgbtn"
        android:layout_below="@id/password1"
        android:text="@string/login"
        android:textSize="30sp"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:textOff="LOGIN"
        android:textOn="LOGIN"


        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignin1"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:text="Don't have an Account yet?"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignin1"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="25dp"
        android:text="Sign up now"
        android:textColor="@color/MidnightBlue"
        android:textSize="16sp"
        android:textStyle="bold" />





</RelativeLayout>