<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkbox"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="293dp"
        android:layout_height="176dp"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="30dp"
        android:visibility="visible"
        app:srcCompat="@drawable/img"
        tools:visibility="visible" />



    <CheckBox
        android:id="@+id/fit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/imageView"
        android:text="FITNESS"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:button="@null"
        android:drawableRight="@drawable/checkboxx"
        />

    <CheckBox
        android:id="@+id/kick"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/fit"
        android:text="Kick Boxing"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:button="@null"
        android:drawableRight="@drawable/checkboxx"
        />


    <ToggleButton
        android:id="@+id/togglebt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kick"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="@drawable/buttons"
        android:textOff="Confirm"
        android:textOn="Confirmed"/>

    <ToggleButton
        android:id="@+id/togglebtt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/togglebt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonss"
        android:padding="5dp"
        android:textOff="Proceed"
        android:textOn="Proceed" />

</RelativeLayout>